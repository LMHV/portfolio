---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import Technologies from "../components/Technologies.astro";
---

<Layout title="LMHV Portfolio.">
	<main>
		<section class="w-full mx-auto lg:w-[1200px] py-44 px-40">
			<div class="flex flex-row justify-between px-10">
				<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4">
					Hey, I'm Luis Herrero
				</h1>
				<Badge
					href="https://www.linkedin.com/in/lmhv/"
					class="bg-slate-900 hover:bg-slate-600 text-blue-400 border-blue-400"
				>
					Available for hire
				</Badge>
			</div>

			<h2 class="text-white text-2xl font-thin my-10">
				I'm an <span class="text-blue-600">Arg</span>e<span
					class="text-yellow-500">nt</span
				>in<span class="text-blue-600">ean</span>
				Full-stack developer. I specialize on Web and Mobile development. Eager to
				learn and improve
			</h2>

			<Technologies />
		</section>
		<section class="w-full mx-auto lg:w-[1200px] py-44 px-40">
			<Experience />
		</section>
	</main>
</Layout>

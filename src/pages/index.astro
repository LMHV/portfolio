---
import "../globals.css";
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "@/components/Projects.astro";
import Container from "@/components/Container.astro";
import IconButton from "@/components/IconButton.astro";
import GithubIcon from "@/components/icons/Github.astro";
import LinkedinIcon from "@/components/icons/Linkedin.astro";
import Header from "@/components/Header.astro";
---

<Layout title="LMHV Portfolio.">
	<Header />

	<main>
		<SectionContainer
			id="home"
			class="mt-20 w-full grid grid-cols-5 auto-rows-auto gap-3"
		>
			<Container
				class="h-[400px] lg:h-auto sm:row-span-5 col-span-6 relative flex flex-col overflow-hidden lg:col-span-3 lg:p-10"
			>
				<img
					src="/images/FotoCV.png"
					alt="Personal image"
					class="absolute w-full h-full object-cover left-0 top-0"
				/>
				<div
					class=" flex flex-col z-[2] absolute left-3 bottom-3 leading-4 p-4 bg-black/5 backdrop-blur-sm rounded-xl"
				>
					<h1 class="text-2xl font-extrabold text-white mix-blend-darken">
						Luis Matias Herrero Vidaña
					</h1>
					<h3 class="text-lg font-semibold text-white">
						Software Developer
					</h3>
					<ul
						class="flex flex-row items-center mt-3 text-sm font-medium text-gray-500 sm:mt-0 gap-x-2"
					>
						<IconButton href="https://github.com/lmhv">
							<GithubIcon class="size-7" />
						</IconButton>
						<IconButton href="https://www.linkedin.com/in/lmhv/">
							<LinkedinIcon class="size-7" />
						</IconButton>
					</ul>
				</div>
			</Container>
			<Container
				class="col-span-6 row-span-2 lg:row-span-3 sm:col-span-3 flex flex-col gap-2 p-7 lg:col-span-2 lg:p-10"
			>
				<div class="flex flex-col gap-y-3">
					<h1 class="text-white text-2xl font-semibold">About</h1>
					<p class="text-gray-500 font-medium">
						A proactive and responsible software developer with a focus on full-stack development, holding a bachelor’s degree in computer science.
					</p>
				</div>
			</Container>
			<Container
				class="col-span-6 row-span-2 lg:row-span-2 sm:col-span-2 flex flex-col items-center justify-center gap-2 p-5 lg:col-span-2 lg:p-5"
			>
				<div class="flex flex-col gap-5 items-center justify-center">
					<h1 class="font-bold text-white text-6xl">+2</h1>
					<h3 class="font-semibold text-gray-500 text-md">
						Years of experience
					</h3>
				</div>
			</Container>
		</SectionContainer>

		<SectionContainer
			id="experience"
			class="py-10 items-center justify-center mt-10 lg:mt-14"
		>
			<h2 class="flex items-center justify-center gap-x-3 text-3xl font-bold text-white">
				Job Experience
			</h2>
			<p class="text-gray-500 font-medium flex justify-center mb-7">
				Profesional experience I've had during my Developer Lifetime
			</p>
			<Experience />
		</SectionContainer>

		<SectionContainer id="projects" class="py-10 flex flex-col mt-7">
			<h2
				class="flex items-center justify-center text-3xl font-bold text-white"
			>
				Projects
			</h2>
			<p class="text-gray-500 font-medium flex justify-center mb-7">
				Here are some projects I've working during my Developer Lifetime
			</p>
			<Projects />
		</SectionContainer>

		
	</main>
</Layout>

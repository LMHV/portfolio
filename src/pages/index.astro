---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import Technologies from "../components/Technologies.astro";
import SectionContainer from "../components/SectionContainer.astro";
import CodeIcon from "../components/icons/Code.astro";
import "../globals.css";
import BriefcaseIcon from "@/components/icons/Briefcase.astro";
import Projects from "@/components/Projects.astro";
import User from "@/components/icons/User.astro";
import Container from "@/components/Container.astro";
import IconButton from "@/components/IconButton.astro";
import GithubIcon from "@/components/icons/Github.astro";
import LinkedinIcon from "@/components/icons/Linkedin.astro";
---

<Layout title="LMHV Portfolio.">
	<main>
		<SectionContainer
			id="home"
			class="mt-20 w-full grid grid-cols-5 auto-rows-auto gap-3"
		>
			<Container
				class="row-span-5 col-span-6 relative flex flex-col overflow-hidden lg:col-span-3 lg:p-10"
			>
				<img
					src="/images/FotoCV.png"
					alt="CV image"
					class="absolute w-full h-full object-cover left-0 top-0"
				/>
				<div
					class="w-full flex flex-col z-[2] absolute left-0 bottom-0 leading-4 p-6"
				>
					<h1 class="text-2xl font-extrabold text-black">
						Luis Matias Herrero Vida√±a
					</h1>
					<h3 class="text-lg font-semibold text-black/50">
						Software Developer
					</h3>
					<ul
						class="flex flex-row items-center mt-3 text-sm font-medium text-gray-500 sm:mt-0 gap-x-2"
					>
						<IconButton href="https://github.com/lmhv">
							<GithubIcon class="size-5" />
						</IconButton>
						<IconButton href="https://www.linkedin.com/in/lmhv/">
							<LinkedinIcon class="size-5" />
						</IconButton>
					</ul>
				</div>
			</Container>
			<Container
				class="row-span-3 col-span-6 flex flex-col gap-2 p-7 lg:col-span-2 lg:p-10"
			>
				<div class="flex flex-col gap-y-3">
					<h1 class="text-white text-2xl font-semibold">About</h1>
					<p class="text-gray-500 font-medium">
						An Argentinean Full-stack software developer. I specialize on Web
						and Mobile development. Eager to learn and improve.
					</p>
				</div>
			</Container>
			<Container
				class="row-span-2 col-span-6 flex flex-col gap-2 p-5 lg:col-span-2 lg:p-5"
			>
				<div class="flex flex-col gap-5 items-center justify-center">
					<h1 class="font-bold text-white text-6xl">+2</h1>
					<h3 class="font-semibold text-gray-500 text-md">
						Years of experience
					</h3>
				</div>
			</Container>
		</SectionContainer>

		<SectionContainer
			id="experience"
			class="py-10 items-center justify-center mt-20 lg:mt-40"
		>
			<h1 class="flex gap-x-3 text-2xl mb-7 text-white">
				<BriefcaseIcon class="size-8" />
				Job Experience
			</h1>
			<Experience />
		</SectionContainer>

		<SectionContainer id="projects" class="py-10 flex flex-col">
			<h1
				class="flex items-center justify-center text-3xl font-bold text-white"
			>
				Projects
			</h1>
			<p class="text-gray-500 font-medium flex justify-center">
				Here are some projects I've working during my Developer Lifetime
			</p>
			<Projects />
		</SectionContainer>
	</main>
</Layout>

---
import TechBadge from "./TechBadge.astro";
import { TAGS } from "../utils/Tags";
import {
  Carousel,
  CarouselContent,
  CarouselItem,
  CarouselNext,
  CarouselPrevious,
} from "@/components/ui/carousel";

const PROJECTS = [
  {
    title: "Nalux SA",
    description: "Management Desktop App for a gas distribution company",
    link: "",
    github: "Private",
    image: "/images/nalux_project.webp",
    tags: [TAGS.PYTHON, TAGS.MONGODB, TAGS.QT],
  },
  {
    title: "Flutter App",
    description: "Event's marketing app",
    link: "",
    github: "",
    image: "/images/flutter_project.webp",
    tags: [TAGS.DART, TAGS.FLUTTER, TAGS.MONGODB],
  },
  {
    title: "Herrero&Asoc",
    description:
      "Webpage for a Customs Brokers company located in San Juan, Argentina",
    link: "",
    github: "",
    image: "/images/herreroasoc_project.webp",
    tags: [
      TAGS.JAVASCRIPT,
      TAGS.NODEJS,
      TAGS.EXPRESSJS,
      TAGS.BOOTSTRAP,
      TAGS.HTML,
    ],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, link, github, image }) => (
    <article class="p-5 mb-5">
      <h2 class="text-xl text-blue-200 font-medium">{title}</h2>
      <p class="text-md text-gray-400 font-thin">{description}</p>

      <ul class="flex gap-x-2 flex-row mb-2 mt-6 items-center flex-wrap">
        {tags.map((tag) => (
          <li class="items-center justify-center mb-2">
            <span
              class={`flex gap-x-2 rounded-lg text-sm font-medium px-4 ${tag.class} py-1 border `}
            >
              <tag.icon class="size-6 " />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="mt-6 rounded-2xl shadow-lg shadow-black hover:scale-105 transition-all duration-150"
        src={image}
        alt={title}
      />
    </article>
  ))
}

---

{
  PROJECTS.map(({ title, description, tags, link, github, image }) => (
    <article>
      <h2 class="text-2xl text-gray-200 font-semibold">{title}</h2>
      <p class="text-md text-gray-400 font-thin">{description}</p>

      <img
        class="mt-6 rounded-2xl border-2 border-gray-100 shadow-lg shadow-black hover:scale-105 transition-all duration-150"
        src={image}
        alt={title}
      />
      <ul class="flex gap-x-2 flex-row mb-2 mt-6 items-center justify-center">
        {tags.map((tag) => (
          <li class="items-center justify-center ">
            <span
              class={`flex gap-x-2 rounded-full text-sm font-medium px-4 ${tag.class} py-1 border `}
            >
              <tag.icon class="size-6 " />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
    </article>
  ))
}

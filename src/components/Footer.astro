---
import IconButton from "./IconButton.astro";
import GithubIcon from "./icons/Github.astro";
import LinkedinIcon from "./icons/Linkedin.astro";
---

<footer
  class="bg-[#1c1e23]/90   backdrop-blur-lg rounded-tl-xl rounded-tr-xl shadow w-full mx-auto md:w-[700px] lg:w-[1000px]"
>
  <div
    class="w-full mx-auto max-w-screen-xl p-4 flex items-center justify-between"
  >
    <span class="text-sm text-white sm:text-center"
      >© 2023 <a
        href="https://github.com/lmhv"
        class="hover:underline"
        rel="noopener"
        target="_blank">LMHV™</a
      >
    </span>
    <ul
      class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 sm:mt-0 gap-x-2"
    >
      <IconButton href="https://github.com/lmhv">
        <GithubIcon class="size-7" />
      </IconButton>
      <IconButton href="https://www.linkedin.com/in/lmhv/">
        <LinkedinIcon class="size-7" />
      </IconButton>
    </ul>
  </div>
</footer>
